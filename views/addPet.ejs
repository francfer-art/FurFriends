<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400..700;1,400..700&family=Bangers&family=Patrick+Hand&family=Quicksand:wght@300..700&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&family=Special+Elite&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/index.css">
    <script src="https://kit.fontawesome.com/0580340085.js" crossorigin="anonymous"></script>
    <title>FurFriends</title>
  </head> 
  <body>
    <header>
      <%- include('modules/navbar.ejs')%>
    </header>
    <div class="bg1 p-4">
      <h1 class="fw-bold text-center">Add Pet:</h1>
      <div class="row d-flex justify-content-center" style="margin-block: 1rem;">
        <div class="col-10 col-xl-6 d-flex flex-column text-center align-items-center bg3" style="border: 3px solid orange; border-radius: 20px;">
          <form action="/pet/addFormPet/<%= result %>" method="post" enctype="multipart/form-data" class="p-5 text-white fw-bold" style="margin-block: 1rem;">
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="name" style="color: #37260cda;">Nombre</label>
              <input type="text" name="pet_name" id="name" class="p-2 text-center" style="background-color: #fdeecf;">
            </div>
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="desc" style="color: #37260cda;">Descripción</label>
              <input type="text" name="pet_description" id="desc" class="p-2 text-center" style="background-color: #fdeecf;">
            </div>
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="specie" style="color: #37260cda;">Especie</label>
              <input type="text" name="pet_species" id="specie" class="p-2 text-center" style="background-color: #fdeecf;">
            </div>
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="adopyear" style="color: #37260cda;">Año De Adopción</label>
              <input type="number" id="adopyear" name="pet_adoption_year" min="1900" max="2100" placeholder="YYYY" class="p-2 text-center" style="background-color: #fdeecf;"> 
            </div>
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="imagen"><i class="bi bi-plus-circle fw-bold fs-1"></i></label>
              <input type="file" name="img" id="imagen" hidden>
            </div>
            <p style="color: #37260cda;"><%= typeof message!='undefined'?message:null %></p>
            <div style="margin-block: 1.3rem;">
              <button class="btn btn-primary formbutton">Aceptar</button>
              <button type="reset" class="btn btn-primary formbutton">Limpiar</button>
              <button type="button" class="btn btn-primary formbutton" onclick="window.location.href='/user/oneUser/<%= result %>'">Cancelar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include('modules/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
