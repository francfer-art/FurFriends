<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400..700;1,400..700&family=Bangers&family=Patrick+Hand&family=Quicksand:wght@300..700&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&family=Special+Elite&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/index.css">
    <script src="https://kit.fontawesome.com/0580340085.js" crossorigin="anonymous"></script>
    <title>FurFriends</title>
  </head> 
  <body>
    <header>
      <%- include('modules/navbar.ejs')%>
    </header>
    <div class="bg1">
      <h1 class="fw-bold text-center d-flex justify-content-center">Meet Our Users: </h1>
      <div class="container-xxl text-white">
        <div class="row gap-3 d-flex justify-content-center" style="padding: 4rem;">
          <% let pos = 0; %>
          <% result.forEach((elem) => { %>
            <div class="col-12 col-xl-8 col-md-8 d-flex flex-column text-center justify-content-center align-items-center bg3 p-5" style="color: #37260cda;">
              <img src="/images/user/<%= elem.user_img?elem.user_img:'user-default.jpg' %>" style="width: 200px; height: 200px; object-fit: cover; border: 7px solid #97bea9; border-radius: 50%;" alt="User default">
              <span class="fw-bold fs-5"><%= elem.user_name %> <%= elem.user_lastname %></span>
              <span class="fw-bold fs-5"><%= elem.email %></span>
              <span class="fs-5"><%= elem.user_phone %></span>
              <p class="d-flex flex-wrap m-0 p-2 fs-6"><%= elem.user_description %></p>
              <a href="/user/oneUser/<%= elem.user_id %>"><i class="fa-solid fa-eye fs-3 fw-bold" style="color: #37260cda;"></i></a>
              <% if (result2[pos]) { %>
                <i class="fa-solid fa-dog p-4 fs-4" style="color: #37260cda; pointer-events: none;"><%= result2[pos].count %></i>
              <% } else { %>
                <i class="fa-solid fa-dog p-4 fs-6" style="color: #37260cda; pointer-events: none;">  No data</i>
              <% } %>
              <% pos++; %>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
    <%- include('modules/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
