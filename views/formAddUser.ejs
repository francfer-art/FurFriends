<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400..700;1,400..700&family=Bangers&family=Patrick+Hand&family=Quicksand:wght@300..700&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&family=Special+Elite&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://kit.fontawesome.com/0580340085.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/index.css">
    <title>FurFriends</title>
  </head> 
  <body>
    <header>
      <%- include('modules/navbar.ejs')%>
    </header>
    <div class="bg1 p-4">
      <div class="row d-flex justify-content-center" style="margin-block: 1rem;">
        <div class="col-10 col-xl-6 d-flex flex-column text-center align-items-center bg3" style="border: 3px solid #37260cda; border-radius: 20px;">
          <form action="/user/addUser" method="post" enctype="multipart/form-data" class="p-5 text-white fw-bold" style="margin-block: 1rem;">
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="name">Name</label>
              <input type="text" name="user_name" id="name" class="p-2 text-center" maxlength="50">
            </div>
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="lastname">Last Name</label>
              <input type="text" name="user_lastname" id="lastname" class="p-2 text-center" maxlength="50">
            </div>
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="email">Email</label>
              <input type="text" name="email" id="email" class="p-2 text-center" maxlength="75">
            </div>
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="desc">Description</label>
              <input type="text" name="user_description" id="desc" class="p-2 text-center" maxlength="255">
            </div>
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="tel">Phone Number</label>
              <input type="text" name="user_phone" id="tel" class="p-2 text-center" maxlength="20">
            </div>
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="pw">Password</label>
              <input type="password" name="password" id="pw" class="p-2 text-center" maxlength="50">
            </div>
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="rpw">Confirm Password</label>
              <input type="password" name="reppassword" id="rpw" class="p-2 text-center" maxlength="50">
            </div>
            <div class="d-flex flex-column justify-content-center mb-2">
              <label for="imagen"><i class="bi bi-plus-circle fw-bold fs-1"></i></label>
              <input type="file" name="img" id="imagen" hidden>
            </div>
            <p style="color: #37260cda;"><%= typeof message!='undefined'?message:null %></p>
            <div style="margin-block: 1.3rem;">
              <button class="btn btn-primary formbutton">Accept</button>
              <button type="reset" class="btn btn-primary formbutton">Clean</button>
              <button type="button" class="btn btn-primary formbutton" onclick="window.location.href='/'">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include('modules/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
